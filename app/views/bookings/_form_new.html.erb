<%= simple_form_for [@client,@booking] do |f| %>
  <%= f.input :date %>
  <%= f.input :city %>
  <%= f.input :food_type %>
  <%= f.input :guest_quantity %>
  <%= f.input :has_electricity %>
  <%=f.collection_select(:chosen_partner_id, Partner.all, :id, :company_name, { :prompt => "Select partner", :selected => @chosen_partner_id}, { class: 'form-control' })%>
  <%=f.collection_select(:client_id, Client.all, :id, :last_name, { :prompt => "Select client", :selected => @client_id}, { class: 'form-control' })%>
  <%= f.submit %>
<% end %>
