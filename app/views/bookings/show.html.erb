<div class="container">
<h1> <%= @booking.client.first_name %> <%= @booking.client.last_name %>'s booking</h1>
<p><%= @booking.date %> </p>
<p><%= @booking.city %></p>
<%= link_to('Edit', edit_booking_path(@booking)) %>
<%= link_to booking_path, method: :delete, data: { confirm: "Are you sure?" } do %>
    <h2 button type="button" class="btn btn-danger">Delete booking</h2></button>
  <% end %>
</div>
