<div class="container-fluid">
  <h1>Partners</h1>
  <%= link_to new_partner_path do %>
  <h2 button type="button" class="btn btn-primary m-3">Create new partner</h2></button>
  <% end %>
  <%= grid(@partners_grid) do |g|
    g.column name:  'Name', filter: false, attribute: 'company_name' do |partner|
      link_to(partner.company_name, partner_path(partner))
    end
    g.column name:  'Food type', filter: false, attribute: 'food_type'  do |partner|
      partner.food_type
    end

    g.column name:  'Phone Number', filter: false, attribute: 'phone_number' do |partner|
      partner.phone_number
    end

    g.column  name:  'E-mail', filter: false, attribute: 'email' do |partner|
      partner.email
    end

    g.column do |partner|
      link_to('Edit', edit_partner_path(partner))
    end
  end -%>
  </div>
