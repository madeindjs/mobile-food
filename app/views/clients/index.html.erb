<div class="container-fluid">
  <h1>Clients</h1>
  <%= grid(@clients_grid) do |g|
    g.column name: 'Last Name', attribute: 'last_name'
    g.column name: 'First Name', attribute: 'first_name'
    g.column name: 'Phone number', attribute: 'phone_number'
    g.column name: 'E-mail', attribute: 'email'
    g.column name: 'Status', attribute: 'status'

    g.column  do |client|
        link_to('Edit', edit_client_path(client))
      end

  end %>

  </div>
