<%= simple_form_for(client) do |f| %>
  <%= f.input :first_name %>
  <%= f.input :last_name %>
  <%= f.input :email %>
  <%= f.input :phone_number %>
  <%= f.input :comment %>
  <%= f.input :status, :collection => %w[New Combox Contacted Confirmed Blacklisted], selected: 1 %>
  <%= f.submit %>
<% end %>
